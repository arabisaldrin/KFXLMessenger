<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<StackPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
           style="-fx-padding: 10; -fx-background-color: transparent;" xmlns="http://javafx.com/javafx/8.0.92"
           xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <StackPane style="-fx-padding: 5; -fx-background-color: #666666; -fx-background-radius: 5;">
            <children>
                <ImageView fx:id="iView" pickOnBounds="true" preserveRatio="true"/>
                <AnchorPane>
                    <children>
                        <HBox style="-fx-padding: 5;" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                              AnchorPane.rightAnchor="0.0">
                            <children>
                                <Button onAction="#saveImage"
                                        style="-fx-background-color: white;" text="Download"/>
                            </children>
                        </HBox>
                        <HBox fx:id="header" alignment="CENTER_RIGHT" layoutX="291.0" layoutY="-1.0"
                              style="-fx-background-color: rgba(0,0,0,0.3);" AnchorPane.leftAnchor="0.0"
                              AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                            <children>
                                <Button contentDisplay="GRAPHIC_ONLY" onAction="#exit"/>
                            </children>
                        </HBox>
                    </children>
                </AnchorPane>
            </children>
            <effect>
                <DropShadow color="#000000c0"/>
            </effect>
        </StackPane>
    </children>
</StackPane>
